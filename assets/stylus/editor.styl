html
	height 100%
	margin 0
	padding 0
	
body
	font-family sans-serif
	min-height:100%

#app-host
	height 100%
	width 100%
	position relative
	overflow hidden

.editor-main
	display flex
	flex-flow row nowrap
	align-items stretch
	width  100%
	height  100%
	justify-content space-between
	
.editor-track-list
	flex 1 content

.editor-deck
	flex 3 100%
	border 1px solid grey
	
.stage
.slice-deck
	border 1px solid grey
	margin 5px
	background-color #ccc
	
.editor-track-list
	border 1px solid grey
	padding 5px
	height 100%
