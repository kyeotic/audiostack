.slider-container
	margin 1rem 0.5rem
	
	.slider
		height 2rem
		width 100%
		border 1px solid grey
	.handle
		font-size 1rem
		text-align center
		background-color black
		color white
		cursor pointer
		width 1rem
		height 2rem

	.handle.active
		background-color grey
	.bar
		position relative
		background #ddd
		top .75rem
		height .5rem
	.bar.bar-1
		background #f00
	.bar.bar-2
		background #0f0